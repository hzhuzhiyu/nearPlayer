<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 对话框 -->
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dlg_prompt_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- 按钮样式 -->
    <style name="DialogBtnStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cmmn_black</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    
     <!-- 输入框样式 -->
    <style name="edit">
        <item name="android:textSize">@dimen/text_sp</item>
        <item name="android:padding">8dp</item>
    </style>
    
    <style name="PopupAnimation" parent="android:Animation">
		<item name="android:windowEnterAnimation">@anim/slide_up_in</item>
		<item name="android:windowExitAnimation">@anim/slide_down_out</item>
	</style>
	
    
   

    <!-- 文本，key:value样式 -->
    <style name="text_value_tv_style">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/cmmn_gray</item>
		<item name="android:padding">5dp</item>
		<item name="android:clickable">false</item>
		<item name="android:singleLine">true</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textSize">14sp</item>
    </style>
    
    <!-- 普通文本样式 -->
    <style name="TextDlgStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">3dp</item>
    </style>
</resources>
